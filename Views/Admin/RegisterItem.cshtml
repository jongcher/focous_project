                    </div>
                </div>
                @*ITEM_SIZE*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="ITEM_SIZE" class="form-label form-control-sm">품목크기</label>
                        <input type="text" asp-for="ITEM_SIZE" name="ITEM_SIZE" class="form-control form-control-sm" id="ITEM_SIZE" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="ITEM_SIZE"></span>
                    </div>
                </div>
                @*ITEM_LVL1*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="ID" class="form-label form-control-sm">품목분류1</label>
                        <input type="text" asp-for="ITEM_LVL1" name="ITEM_LVL1" class="form-control form-control-sm" id="ITEM_LVL1" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="ITEM_LVL1"></span>
                    </div>
                </div>
                @*ITEM_LVL2*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="ITEM_LVL2" class="form-label form-control-sm">품목분류2</label>
                        <input type="text" asp-for="ITEM_LVL2" name="ITEM_LVL2" class="form-control form-control-sm" id="ITEM_LVL2" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="ITEM_LVL2"></span>
                    </div>
                </div>
                @*ITEM_LVL3*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="ITEM_LVL3" class="form-label form-control-sm">품목분류3</label>
                        <input type="text" asp-for="ITEM_LVL3" name="ITEM_LVL3" class="form-control form-control-sm" id="ITEM_LVL3" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="ITEM_LVL3"></span>
                    </div>
                </div>
                @*STOCK_UNIT*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="STOCK_UNIT" class="form-label form-control-sm">저장단위</label>
                        <input type="text" asp-for="STOCK_UNIT" name="STOCK_UNIT" class="form-control form-control-sm" id="STOCK_UNIT" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="STOCK_UNIT"></span>
                    </div>
                </div>
                @*SALE_UNIT*@
