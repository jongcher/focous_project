@model FUCOS.Models.Login.AdminManageModel
<div class="col-12 row p-0 m-0 d-flex justify-content-center">
    <div class="col-10 row p-0 m-0">
        <div class="col-12 row p-0 m-0">품목등록</div>
        <div class="col-12 row p-0 m-0">
            <form asp-controller="Admin" asp-action="RegisterItem" method="get">
