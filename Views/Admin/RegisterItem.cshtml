                @*ITEM_PRICE*@
                <div class="col-12 row p-0 justify-content-center" style="margin : 0; margin-top : 10px;">
                    <div class="col-6 row p-0 m-0">
                        <label for="ITEM_PRICE" class="form-label form-control-sm">가격</label>
                        <input type="text" asp-for="ITEM_PRICE" name="ITEM_PRICE" class="form-control form-control-sm" id="ITEM_PRICE" autocomplete="off">
                        <span style="margin-left:15px; color:#ffffff; font-size:12px;" asp-validation-for="ITEM_PRICE"></span>
                    </div>
                </div>
                <div class="col-12 row m-0 p-0 d-flex justify-content-center">
                    <input class="col-3 btn btn-outline-secondary" style="margin:0; margin-right : 10px;" type="submit" value="품목등록" />
                    <a class="col-3 btn btn-outline-secondary" asp-controller="Admin" asp-action="Admin">취소</a>
                </div>
            </form>
        </div>

    </div>
</div>