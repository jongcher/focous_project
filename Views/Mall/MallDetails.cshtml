@model FUCOS.Models.Login.ContractManageModel

<div class="col-12 d-flex justify-content-center row m-0 p-0">
    <div class="col-6 row p-0 m-0">
        <div class="col-12 row p-0 m-0">
            <span style="height:26px; height: 36px; color: #3A3A3A; font-weight: 600; font-size: 21px; margin:0; margin-top : 10px; border-bottom: 2px solid #A6A6A6; padding-bottom:10px;">@ViewBag.ITEM_NM @ViewBag.ITEM_SIZE @ViewBag.UNIT_ITEM</span>
        </div>
        <div class="col-12 row p-0 m-0"></div>
    </div>
    <div class="col-3 row m-0" style="border-left : 1px solid #F6F6F6; padding: 0; padding-left : 10px;">
        <form method="get" asp-action="Register_contract" asp-controller="Contract" >
        <div class="col-12 row p-0 m-0">
            <div class="col-11 row p-0 m-0" style=" height : 220px; border-bottom : 1px solid #F6F6F6;">
                <div class="col-12 row p-0" style="margin : 0; margin-top : 15px;">
                    <div class="col-12 row p-0 m-0"><span>속성</span></div>
                    <div class="col-12 row p-0 m-0">
                            <select asp-for="OPTION_M" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>선택옵션</option>
                            @for (int a = 0; a < ViewBag.op_li_CD.Count; a ++)
                            {
                                <option value="@ViewBag.op_li_CD[a]">@ViewBag.op_li_NM[a]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-12 row p-0" style="margin : 0; margin-top : 15px;">
                    <div class="col-12 row p-0 m-0"><span>상세옵션</span></div>
                    <div class="col-12 row p-0 " style="margin :0; margin-bottom : 10px;">
                        <select asp-for="OPTION_D" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>상세옵션</option>
                            @for (int a = 0; a < ViewBag.op_li_CD2.Count; a ++)
                            {
                                <option value="@ViewBag.op_li_CD2[a]">@ViewBag.op_li_NM2[a]</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-12 row p-0" style="margin:0; margin-top:10px; margin-bottom:10px;">
                    <span style="height:26px;">가격 : @ViewBag.ITEM_PRICE 원</span>
                </div>
                <div class="col-12 row p-0 m-0">
                    <div class=" col-6 row m-0 p-0">
                        <input asp-for="ITEM_SEQ" type="text" class="form-control" value="1" id="ITEM_SEQ" />
                    </div>
                    <div class=" col-3 row p-0 m-0">
                        <button type="button" class="btn btn-secondary" onclick="let number = Count.innerText; number = parseInt(number) + 1; Count.innerText = number;" id="Pl">+</button>
                        </div>
                    <div class=" col-3 row p-0 m-0">
                        <button type="button" class="btn btn-secondary" onclick="let number = Count.innerText;  if (parseInt(number = ' 1')){ return;}  number=parseInt(number) - 1; Count.innerText = number;" id="Mn">-</button>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-12 row p-0 m-0">
            <div class="col-11 row p-0 m-0 " style=" height : 200px; border-bottom : 1px solid #ffffff;">
            </div>
        </div>
        <div class="col-11 row p-0 m-0 d-flex justify-content-between">
            <a type="button" asp-controller="Cart" asp-action="Cart_Insert" asp-route-ITEM_CD="@ViewBag.ITEM_CD" class="btn btn-outline-secondary" style="height : 36px; margin-bottom : 10px; width:24%;"><i class="fa-solid fa-cart-shopping"></i></a>
                <input type="submit" class="btn btn-secondary col-9" style="height : 36px; margin-bottom : 10px;" value="주문하기" />
            <button type="button" onclick="window.close();" class="btn btn-outline-secondary" style="height : 36px;">취소</button>
        </div>
            <input type="hidden" asp-for="ITEM_PRICE" value="@ViewBag.ITEM_PRICE" />
            <input type="hidden" asp-for="ITEM_CD" value="@ViewBag.ITEM_CD" />
            <input type="hidden" asp-for="BUY_USER_ID" value="@ViewBag.USER_ID" />
        </form>
    </div>
</div>


<script type="text/javascript">
    function count(type) {
        const Count = document.getElementById("ITEM_SEQ");

        let number = Count.innerText;

        if (type === "Pl") {
           
            number = parseInt(number) + 1;
        } else if (type === "Mn") {
            if (parseInt(number = "1")){ return;}
            number = parseInt(number) - 1;
        }
        Count.innerText = number;
    }
</script>
